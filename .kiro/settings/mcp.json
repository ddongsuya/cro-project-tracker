{
  "mcpServers": {
    "claude-integration": {
      "command": "uvx",
      "args": ["anthropic-mcp-server@latest"],
      "env": {
        "ANTHROPIC_API_KEY": "your_anthropic_api_key_here",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": ["analyze_text", "generate_content"]
    }
  }
}